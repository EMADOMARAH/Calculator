<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:hint="0"
        android:textColor="#3C3F41"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="mc"
                android:textAllCaps="false"
                android:textSize="32dp"
                android:textColor="#848484"
                android:background="#F4F4F4"

                />

            <Button
                android:id="@+id/btn_c"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="C"
                android:textSize="30dp"
                android:textColor="#007DFD"
                android:background="#F4F4F4"
                android:onClick="defaultC"
                />

            <Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="45dp"
                android:background="#FAFBFB"
                android:onClick="Button"/>

            <Button
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="45dp"
                android:background="#FAFBFB"
                android:onClick="Button"/>

            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="45dp"
                android:background="#FAFBFB"
                android:onClick="Button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="%"
                android:textSize="30dp"
                android:background="#FAFBFB"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="m+"
                android:textColor="#848484"
                android:textAllCaps="false"
                android:textSize="32dp"
                android:background="#F4F4F4"/>

            <Button
                android:id="@+id/btn_div"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30dp"
                android:background="#F4F4F4"
                android:textColor="#007DFD"
                android:onClick="op"/>

            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="45dp"
                android:background="#FAFBFB"
                android:onClick="Button"/>

            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="45dp"
                android:background="#FAFBFB"
                android:onClick="Button"/>

            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="45dp"
                android:background="#FAFBFB"
                android:onClick="Button"/>

            <Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="45dp"
                android:background="#FAFBFB"
                android:onClick="Button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F4F4F4"
                android:text="m-"
                android:textColor="#848484"
                android:textAllCaps="false"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="30dp"
                android:background="#F4F4F4"
                android:textColor="#007DFD"
                android:onClick="op"/>

            <Button
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="45dp"
                android:background="#FAFBFB"
                android:onClick="Button"/>

            <Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="45dp"
                android:background="#FAFBFB"
                android:onClick="Button"/>

            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="45dp"
                android:background="#FAFBFB"
                android:onClick="Button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text=","
                android:textSize="30dp"
                android:background="#FAFBFB"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="mr"
                android:textAllCaps="false"
                android:textColor="#848484"
                android:textSize="32dp"
                android:background="#F4F4F4"/>


            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_backspace_black_24dp"
                android:background="#F4F4F4"
                android:onClick="back"/>

            <Button
                android:id="@+id/btn_min"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="40dp"
                android:background="#F4F4F4"
                android:textColor="#007DFD"
                android:onClick="op"/>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="40dp"
                android:background="#F4F4F4"
                android:textColor="#007DFD"
                android:onClick="op"/>

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#007DFE"
                android:text="="
                android:textColor="#fff"
                android:textSize="40dp"
                android:onClick="equal"/>



        </LinearLayout>


    </LinearLayout>


</LinearLayout>